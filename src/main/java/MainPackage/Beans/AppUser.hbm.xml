<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="MainPackage.Beans.AppUser" table="AppUser" schema="dbo" catalog="CampRandoApp">
        <id name="username">
            <column name="username" sql-type="varchar(64)" length="64"/>
        </id>
        <property name="passwordHash">
            <column name="passwordHash" sql-type="varchar(max)" length="2147483647"/>
        </property>
        <property name="isConfirmed">
            <column name="isConfirmed" sql-type="int"/>
        </property>
        <property name="profile">
            <column name="profile" sql-type="int"/>
        </property>
        <set name="eventsByUsername" inverse="true">
            <key>
                <column name="organizerId"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.Event"/>
        </set>
        <set name="eventCommentsByUsername" inverse="true">
            <key>
                <column name="idUser"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.EventComments"/>
        </set>
        <set name="eventParticipantsByUsername" inverse="true">
            <key>
                <column name="participantId"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.EventParticipants"/>
        </set>
        <set name="userAdditionalInfosByUsername" inverse="true">
            <key>
                <column name="userId"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.UserAdditionalInfos"/>
        </set>
    </class>
</hibernate-mapping>