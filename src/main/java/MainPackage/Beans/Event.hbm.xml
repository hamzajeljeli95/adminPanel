<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="MainPackage.Beans.Event" table="Event" schema="dbo" catalog="CampRandoApp">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="organizerId">
            <column name="organizerId" sql-type="varchar(64)" length="64"/>
        </property>
        <many-to-one name="appUserByOrganizerId" class="MainPackage.Beans.AppUser">
            <column name="organizerId"/>
        </many-to-one>
        <set name="eventAdditionalInfosById" inverse="true">
            <key>
                <column name="eventId"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.EventAdditionalInfos"/>
        </set>
        <set name="eventCommentsById" inverse="true">
            <key>
                <column name="idEvent"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.EventComments"/>
        </set>
        <set name="eventParticipantsById" inverse="true">
            <key>
                <column name="eventId"/>
            </key>
            <one-to-many not-found="ignore" class="MainPackage.Beans.EventParticipants"/>
        </set>
    </class>
</hibernate-mapping>