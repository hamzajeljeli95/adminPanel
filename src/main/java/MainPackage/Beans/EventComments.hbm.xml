<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="MainPackage.Beans.EventComments" table="EventComments" schema="dbo" catalog="CampRandoApp">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="idEvent">
            <column name="idEvent" sql-type="int"/>
        </property>
        <property name="idUser">
            <column name="idUser" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="commentContent">
            <column name="commentContent" sql-type="varchar(max)" length="2147483647"/>
        </property>
        <property name="dateTimeComment">
            <column name="dateTimeComment" sql-type="datetime2"/>
        </property>
        <many-to-one name="eventByIdEvent" class="MainPackage.Beans.Event">
            <column name="idEvent"/>
        </many-to-one>
        <many-to-one name="appUserByIdUser" class="MainPackage.Beans.AppUser">
            <column name="idUser"/>
        </many-to-one>
    </class>
</hibernate-mapping>